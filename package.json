{
    "name": "random-api",
    "version": "1.0.0",
    "description": "Microservice that polls a random number generator and provides an API to return the average of the random numbers encountered so far.",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "build": "npx tsc -p tsconfig.build.json && chmod +x ./dist/server.js",
        "dev": "concurrently 'npx tsc -p tsconfig.build.json --watch' 'nodemon -q dist/server.js'",
        "lint": "eslint . --ext .ts",
        "lint:watch": "esw -w --changed . --ext .ts",
        "start": "node dist/server.js",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "author": "D.Latheron",
    "license": "UNLICENSED",
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/nconf": "^0.10.6",
        "@types/node": "^18.18.9",
        "@types/node-schedule": "^2.1.3",
        "@typescript-eslint/eslint-plugin": "^6.11.0",
        "@typescript-eslint/parser": "^6.11.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.53.0",
        "eslint-watch": "^8.0.0",
        "jest": "^29.7.0",
        "jest-express": "^1.12.0",
        "nodemon": "^3.0.1",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2"
    },
    "dependencies": {
        "dayjs": "^1.11.10",
        "express": "^4.18.2",
        "ky": "^1.1.3",
        "nconf": "^0.12.1",
        "node-schedule": "^2.1.1"
    }
}
